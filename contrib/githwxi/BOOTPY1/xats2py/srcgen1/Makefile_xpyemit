########################################################################
########################################################################
# Makefile for bootstrapping
########################################################################
########################################################################
CAT=cat
SED=sed
ECHO=echo
MAKE=make
NODE=node
########################################################################
########################################################################
all:: lib2xats2py
########################################################################
########################################################################
clean:: ; rm -f *~
cleanall:: ; rm -f *~
########################################################################
cleanall:: ; rm -f BUILD/*_sats_out0.py
cleanall:: ; rm -f BUILD/*_dats_out0.py
cleanall:: ; rm -f BUILD/*_dats_out1.py
########################################################################
########################################################################
SRCGEN2=./../../../../../srcgen2
XATS2PY=./../../../../../srcgen2/xats2py
########################################################################
#
SRCSATS := \
xats2py.sats \
py1emit.sats \
#
########################################################################
#
SRCDATS := \
xats2py.dats \
xats2py_dynexp.dats \
xats2py_decl00.dats \
py1emit.dats \
py1emit_utils0.dats \
py1emit_dynexp.dats \
py1emit_decl00.dats \
#
########################################################################
########################################################################
OUT0SATS := \
$(patsubst %.sats, \
  BUILD/%_sats_out0.py, $(SRCSATS))
OUT0DATS := \
$(patsubst %.dats, \
  BUILD/%_dats_out0.py, $(SRCDATS))
OUT1DATS := \
$(patsubst %.dats, \
  BUILD/%_dats_out1.py, $(SRCDATS))
########################################################################
########################################################################
boot:: \
boot_sats
boot_sats:: $(OUT0SATS)
########################################################################
boot:: \
boot_dats
boot_dats:: $(OUT0DATS)
########################################################################
########################################################################
BUILD/%_sats_out0.py: \
$(XATS2PY)/srcgen1/SATS/%.sats; \
$(NODE) --stack-size=8800 $(XATSOPT_TCHECK00) $< > $@
BUILD/%_dats_out0.py: \
$(XATS2PY)/srcgen1/DATS/%.dats; \
$(NODE) --stack-size=8800 $(XATS2PY_PYEMIT00) $< > $@
########################################################################
########################################################################
SRCGEN2_XSHARED=$(SRCGEN2)/xats2js/srcgenx/xshared/runtime
########################################################################
XATSOPT_TCHECK00=$(SRCGEN2)/UTIL/xatsopt_tcheck00_dats.js
XATS2PY_PYEMIT00=$(XATS2PY)/srcgen1/UTIL/xats2py_pyemit00_ats3.js
########################################################################
########################################################################
N001="X"
N002=$(N001) $(N001)
N004=$(N002) $(N002)
N008=$(N004) $(N004)
N016=$(N008) $(N008)
N032=$(N016) $(N016)
N064=$(N032) $(N032)
N128=$(N064) $(N064)
N256=$(N128) $(N128)
N512=$(N256) $(N256)
NFILE=$(N064) $(N032) $(N004) # 100=064+032+004
##################################################################
BUILD/%_dats_out1.py: \
BUILD/%_dats_out0.py; \
$(eval NFILE=$(NFILE) X) \
$(SED) -e 's/jsxtnm/jsx$(words $(NFILE))tnm/g' $< > $@
##################################################################
lib2xats2py: $(OUT1DATS); $(CAT) $(OUT1DATS) > lib/lib2xats2py.py
########################################################################
########################################################################
