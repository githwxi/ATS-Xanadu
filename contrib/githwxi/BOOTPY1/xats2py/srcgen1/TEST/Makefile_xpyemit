########################################################################
SRCGEN1=./../../../../../../srcgen1
SRCGEN2=./../../../../../../srcgen2
########################################################################
OUT0DATS := \
$(patsubst %.dats, \
  OUTS/%_dats_out0.py, $(SRCDATS))
OUT1DATS := \
$(patsubst %.dats, \
  OUTS/%_dats_out1.py, $(SRCDATS))
########################################################################
########################################################################
all:: all_dats
all_dats:: $(OUT0DATS)
########################################################################
clean:: ; rm -f *~
########################################################################
cleanall:: ; rm -f *~
cleanall:: ; rm -f OUTS/*_dats_out0.py
cleanall:: ; rm -f OUTS/*_dats_out1.py
cleanall:: ; rm -f xats2py_pyemit00_ats3.py
cleanall:: ; rm -f xats2py_pyemit01_ats3.py
########################################################################
########################################################################
#
OUTS/%_dats_out0.py: \
$(SRCGEN2)/DATS/%.dats; \
$(PYTHON) $(XATS2PY_PYEMIT00) __void__ $< > $@
#
OUTS/%_dats_out0.py: \
$(SRCGEN2)/xats2js/srcgen1/DATS/%.dats; \
$(PYTHON) $(XATS2PY_PYEMIT00) __void__ $< > $@
#
OUTS/%_dats_out0.py: \
$(SRCGEN2)/xats2py/srcgen1/DATS/%.dats; \
$(PYTHON) $(XATS2PY_PYEMIT00) __void__ $< > $@
#
########################################################################
########################################################################
S2XSHRD=\
$(SRCGEN2)/xats2py/srcgenx/xshared/runtime
########################################################################
########################################################################
XATS2PY_PYEMIT00=./../UTIL/xats2py_pyemit00_ats3.py
########################################################################
########################################################################
#
# HX-2025-04-05:
# The [S1XSHRD] is used here as
# the code in [srcgen1/prelude] requires it.
#
all:: \
xats2py_pyemit00
xats2py_pyemit00: ; \
printf "\
## %s\n%s\n%s\n%s\n%s\n" \
"`date`" \
"import os" \
"import sys" \
"import math" \
"sys.setrecursionlimit(66000)" \
> $@_ats3.py && \
$(CAT) \
$(S2XSHRD)/xats2py_py1emit.py >> $@_ats3.py && \
$(CAT) \
$(S2XSHRD)/srcgen1_prelude.py >> $@_ats3.py && \
$(CAT) \
$(S2XSHRD)/srcgen1_xatslib.py >> $@_ats3.py && \
$(CAT) lib/lib2xatsopt2js2py.py >> $@_ats3.py && \
$(PYTHON) \
$(XATS2PY_PYEMIT00) __void__ \
$(SRCGEN2)/xats2py/srcgen1/UTIL/xats2py_pyemit00.dats >> $@_ats3.py
#
all:: \
xats2py_pyemit01
xats2py_pyemit01: ; \
printf "\
## %s\n%s\n%s\n%s\n%s\n" \
"`date`" \
"import os" \
"import sys" \
"import math" \
"sys.setrecursionlimit(66000)" \
> $@_ats3.py && \
$(CAT) \
$(S2XSHRD)/xats2py_py1emit.py >> $@_ats3.py && \
$(CAT) \
$(S2XSHRD)/srcgen1_prelude.py >> $@_ats3.py && \
$(CAT) \
$(S2XSHRD)/srcgen1_xatslib.py >> $@_ats3.py && \
$(CAT) lib/lib2xatsopt2js2py.py >> $@_ats3.py && \
$(PYTHON) \
$(XATS2PY_PYEMIT00) __void__ \
$(SRCGEN2)/xats2py/srcgen1/UTIL/xats2py_pyemit01.dats >> $@_ats3.py
#
########################################################################
########################################################################
N001="X"
N002=$(N001) $(N001)
N004=$(N002) $(N002)
N008=$(N004) $(N004)
N016=$(N008) $(N008)
N032=$(N016) $(N016)
N064=$(N032) $(N032)
N128=$(N064) $(N064)
N256=$(N128) $(N128)
N512=$(N256) $(N256)
NFILE=$(N064) $(N032) $(N004) # 100=064+032+004
########################################################################
OUTS/%_dats_out1.py: \
OUTS/%_dats_out0.py; \
$(eval NFILE=$(NFILE) X) \
$(SED) -e 's/pyxtnm/pyx$(words $(NFILE))tnm/g' $< > $@
########################################################################
lib/lib2xatsopt2js2py.py: \
$(OUT1DATS); $(CAT) $(OUT1DATS) > lib/lib2xatsopt2js2py.py
