AR=ar
CP=cp
MV=mv
CC=gcc
SED=sed
CPF=cp -f
MVF=mv -f
RMF=rm -f
WCL=wc -l
########################################################################
CAT=cat
CPF=cp -f
ECHO=echo
NODE=node
NODE=node --stack-size=4096
######
XSHARED="${XATSJSD}/xshared"
######
SRCGEN1=./../../../../../srcgen1
SRCGEN2=./../../../../../srcgen2
######
XATSJSD=\
$(SRCGEN1)/srcgen1/xats2js/srcgen1
######
XATS2JS_PRELUDE=\
"$(XSHARED)/runtime/xats2js_prelude.js"
XATS2JS_PRELUDE_NODE=\
"$(XSHARED)/runtime/xats2js_prelude_node.js"
XATS2JS_XATSLIB_NODE=\
"$(XSHARED)/runtime/xats2js_xatslib_node.js"
########################################################################
#
XATS2JS=./../../../srcgen1/xats2js/bin/xats2js
#
# XATS2JS=\
# nix run \
# github:GZGavinZhao/ATS-Xanadu/nixify\#xats2js \
# --extra-experimental-features flakes --extra-experimental-features nix-command --
#
########################################################################

SRCSATS := \
xats2py.sats \
py1emit.sats \

######

SRCDATS := \
xats2py.dats \
xats2py_dynexp.dats \
xats2py_decl00.dats \
py1emit.dats \
py1emit_utils0.dats \
py1emit_dynexp.dats \
py1emit_decl00.dats \

########################################################################
########################################################################
OBJSATS := \
$(patsubst %.sats, BUILD/JS/%_sats.js, $(SRCSATS))
OBJDATS := \
$(patsubst %.dats, BUILD/JS/%_dats.js, $(SRCDATS))
########################################################################
########################################################################
all:: $(OBJDATS)
########################################################################
cleanall:: ; rm -f BUILD/JS/*_dats.js
########################################################################
libxats2py:: $(OBJDATS); \
$(CAT) $(OBJDATS) > lib/libxats2py.js
########################################################################
XATS2PY_SRCGEN1=$(SRCGEN2)/xats2py/srcgen1
########################################################################
BUILD/JS/%_dats.js: \
$(XATS2PY_SRCGEN1)/DATS/%.dats; $(XATS2JS) --output-w $@ --dynamic $<
