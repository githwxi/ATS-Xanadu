########################################################################
CAT=cat
ECHO=echo
########################################################################
BUN=bun
NODE=node
PYTHON=python3
########################################################################
########################################################################
all:: test00
all:: test01
########################################################################
########################################################################
testall:: test00; $(PYTHON) $<_out.py
testall:: test01; $(PYTHON) $<_out.py
########################################################################
########################################################################
SRCGEN2_SRCGENX=\
$(XATSHOME)/srcgen2/xats2py/srcgenx
SRCGEN2_XSHARED=$(SRCGEN2_SRCGENX)/xshared/runtime
SRCGEN2_XATS2PY="./../UTIL/xats2py_pyemit00_dats.js"
########################################################################
########################################################################
test00:: ; \
echo "##" `date` > $@_out.py
############
test00:: ; \
$(CAT) $(SRCGEN2_XSHARED)/xats2py_py1emit.py >> $@_out.py
test00:: ; \
$(CAT) $(SRCGEN2_XSHARED)/xats2py_prelude.py >> $@_out.py
############
test00:: \
test00_xats2py.dats; \
$(BUN) run $(SRCGEN2_XATS2PY) $< >> $@_out.py
