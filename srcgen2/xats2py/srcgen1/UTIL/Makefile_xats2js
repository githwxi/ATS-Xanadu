########################################################################
#
# HX-2024-11-30:
# For compiling
# xats2py_pyemit00 to JavaScript
# The compiler is srcgen1/xats2js
#
########################################################################
CAT=cat
CPF=cp -f
ECHO=echo
NODE=node
NODE=node \
--stack-size=4096
NODE=node \
--stack-size=4096 \
--max-old-space-size=4096
########################################################################
XSHARED=${XATSJSD}/xshared
XATS2JS=${XATSJSD}/bin/xats2js
########################################################################
XATSJSD=\
$(XATSHOME)/srcgen1/xats2js/srcgenx
########################################################################
LIBXATS2PY_JS="./../lib/lib1xats2py.js"
LIBXATSOPT_JS="./../../../lib/lib1xatsopt.js"
LIBXATS2JS_JS=\
"./../../../xats2js/srcgenx/lib/lib1xats2js.js"
########################################################################
XATS2JS_JS1EMIT="$(XSHARED)/runtime/xats2js_js1emit.js"
XATS2JS_PRELUDE="$(XSHARED)/runtime/xats2js_prelude.js"
XATS2JS_PRELUDE_NODE="$(XSHARED)/runtime/xats2js_prelude_node.js"
XATS2JS_XATSLIB_NODE="$(XSHARED)/runtime/xats2js_xatslib_node.js"
########################################################################
#
all:: \
xats2py_pyemit00
xats2py_pyemit00:: \
xats2py_pyemit00.dats ; \
$(CAT) \
$(XATS2JS_JS1EMIT) > $@_ats2.js && \
$(CAT) \
$(XATS2JS_PRELUDE) >> $@_ats2.js && \
$(CAT) \
$(XATS2JS_PRELUDE_NODE) >> $@_ats2.js && \
$(CAT) \
$(XATS2JS_XATSLIB_NODE) >> $@_ats2.js && \
$(CAT) $(LIBXATSOPT_JS) >> $@_ats2.js && \
$(CAT) $(LIBXATS2JS_JS) >> $@_ats2.js && \
$(CAT) $(LIBXATS2PY_JS) >> $@_ats2.js && \
$(XATS2JS) --output-a $@_ats2.js --dynamic $@.dats
#
all:: \
xats2py_pyemit01
xats2py_pyemit01:: \
xats2py_pyemit01.dats ; \
$(CAT) \
$(XATS2JS_JS1EMIT) > $@_ats2.js && \
$(CAT) \
$(XATS2JS_PRELUDE) >> $@_ats2.js && \
$(CAT) \
$(XATS2JS_PRELUDE_NODE) >> $@_ats2.js && \
$(CAT) \
$(XATS2JS_XATSLIB_NODE) >> $@_ats2.js && \
$(CAT) $(LIBXATSOPT_JS) >> $@_ats2.js && \
$(CAT) $(LIBXATS2JS_JS) >> $@_ats2.js && \
$(CAT) $(LIBXATS2PY_JS) >> $@_ats2.js && \
$(XATS2JS) --output-a $@_ats2.js --dynamic $@.dats
#
########################################################################
#
# HX: for cleaning up
#
clean:: ; rm -f *~
#
cleanall:: clean
cleanall:: ; rm -f ./xats2py_pyemit??_ats2.js
#
