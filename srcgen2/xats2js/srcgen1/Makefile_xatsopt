########################################################################
#
# Xinterp-D3: Interpreting level-3 syntax
# The compiler for Xinterp-D3 is srcgen1/xatsopt
# (HX-2024-01-06: xatsopt does type-checking only for now)
#
########################################################################

AR=ar
CP=cp
MV=mv
CC=gcc
SED=sed
CPF=cp -f
MVF=mv -f
RMF=rm -f
WCL=wc -l

######
all::
######
all:: all_sats
######
all:: all_dats
######

######
#
# HX:
# srcgen1 is
# implemented in ATS2
#
XATSOPT=\
$(XATSHOME)/srcgen1/bin/xatsopt
#
######

######
#
# HX: processing SATS-files
#
######

######
all_sats:: \
intrep0_sats
intrep0_sats: ; \
$(XATSOPT) --static SATS/intrep0.sats
######
all_sats:: \
trxd3i0_sats
trxd3i0_sats: ; \
$(XATSOPT) --static SATS/trxd3i0.sats
######
all_sats:: \
intrep1_sats
intrep1_sats: ; \
$(XATSOPT) --static SATS/intrep1.sats
######
all_sats:: \
trxi0i1_sats
trxi0i1_sats: ; \
$(XATSOPT) --static SATS/trxi0i1.sats
######
all_sats:: \
xats2js_sats
xats2js_sats: ; \
$(XATSOPT) --static SATS/xats2js.sats
######
all_sats:: \
js1emit_sats
js1emit_sats: ; \
$(XATSOPT) --static SATS/js1emit.sats
######

######
#
# HX: processing DATS-files
#
######

######
all_dats:: \
intrep0_dats
intrep0_dats: ; \
$(XATSOPT) --dynamic DATS/intrep0.dats
######
all_dats:: \
intrep0_print0_dats
intrep0_print0_dats: ; \
$(XATSOPT) --dynamic DATS/intrep0_print0.dats
