########################################################################
########################################################################
# Makefile for bootstrapping
########################################################################
########################################################################
CAT=cat
SED=sed
ECHO=echo
MAKE=make
NODE=node
########################################################################
SRCGEN2=./../../../srcgen2
########################################################################
########################################################################
all::
########################################################################
########################################################################
clean:: ; rm -f *~
########################################################################
cleanall:: ; rm -f *~
cleanall:: ; rm -f BUILD/JS/*_sats_out.js
cleanall:: ; rm -f BUILD/JS/*_dats_out?.js
########################################################################
########################################################################

SRCSATS := \
xdpndcy.sats \

########################################################################

SRCDATS := \
xdpndcy.dats \
xdpndcy_tmplib.dats \
xdpndcy_myenv0.dats \
xdpndcy_dynexp.dats \
xdpndcy_decl00.dats \

########################################################################
########################################################################
OUTSATS := \
$(patsubst %.sats, BUILD/JS/%_sats_out.js, $(SRCSATS))
OUT0DATS := \
$(patsubst %.dats, BUILD/JS/%_dats_out0.js, $(SRCDATS))
OUT1DATS := \
$(patsubst %.dats, BUILD/JS/%_dats_out1.js, $(SRCDATS))
########################################################################
########################################################################
all:: all_sats
all_sats:: $(OUTSATS)
########################################################################
all:: all_dats
all_dats:: $(OUT0DATS)
########################################################################
-include .depend_xjsemit
########################################################################
#
BUILD/JS/%_sats_out.js: \
./SATS/%.sats; \
$(NODE) --stack-size=4096 $(XATSOPT_TCHECK00) $< > $@
#
BUILD/JS/%_dats_out0.js: \
./DATS/%.dats; \
$(NODE) --stack-size=4096 $(XATS2JS_JSEMIT00) $< > $@
#
########################################################################
########################################################################
XATSOPT_TCHECK00=\
$(SRCGEN2)/UTIL/xatsopt_tcheck00_ats2.js
XATS2JS_JSEMIT00=\
$(SRCGEN2)/xats2js/srcgen1/UTIL/xats2js_jsemit00_ats2.js
########################################################################
########################################################################
N001="X"
N002=$(N001) $(N001)
N004=$(N002) $(N002)
N008=$(N004) $(N004)
N016=$(N008) $(N008)
N032=$(N016) $(N016)
N064=$(N032) $(N032)
N128=$(N064) $(N064)
N256=$(N128) $(N128)
N512=$(N256) $(N256)
NFILE=$(N064) $(N032) $(N004) # 100=064+032+004
##################################################################
BUILD/JS/%_dats_out1.js: \
BUILD/JS/%_dats_out0.js; \
$(eval NFILE=$(NFILE) X) \
$(SED) -e 's/jsxtnm/jsx$(words $(NFILE))tnm/g' $< > $@
##################################################################
lib2xdpndcy: $(OUT1DATS); $(CAT) $(OUT1DATS) > lib/lib2xdpndcy.js
########################################################################
########################################################################
