########################################################################
OBJSATS := \
$(patsubst %.sats, BUILD/JS/%_sats.js, $(SRCSATS))
OBJDATS := \
$(patsubst %.dats, BUILD/JS/%_dats.js, $(SRCDATS))
########################################################################
all:: $(OBJDATS)
########################################################################
libxatsopt:: $(OBJDATS); \
$(CAT) $(OBJDATS) > lib/libxatsopt.js
########################################################################
BUILD/JS/%_dats.js: \
DATS/%.dats; $(XATS2JS) --output-a $@ --dynamic $<
########################################################################
cleanall:: ; rm -f BUILD/JS/*_dats.js
########################################################################
