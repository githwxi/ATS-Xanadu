########################################################################
#
OUTSATS := \
$(patsubst %.sats, \
  BUILD/%_sats_out.00, $(SRCSATS))
OUTDATS := \
$(patsubst %.dats, \
  BUILD/%_dats_out.00, $(SRCDATS))
#
########################################################################
all_sats:: $(OUTSATS)
all_dats:: $(OUTDATS)
########################################################################
BUILD/%_sats_out.00: $(SRCGEN2)/SATS/%.sats; $(XATSOPT) --static $<
BUILD/%_dats_out.00: $(SRCGEN2)/DATS/%.dats; $(XATSOPT) --dynamic $<
########################################################################
########################################################################
###################### end of [Makefile_xatsopt] #######################
