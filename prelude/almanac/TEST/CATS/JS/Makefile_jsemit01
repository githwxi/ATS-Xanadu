########################################################################
########################################################################
# Makefile for JS-emission
########################################################################
########################################################################
CAT=cat
ECHO=echo
PRINTF=printf
########################################################################
BUN=bun
NODE=node
PYTHON=python3
########################################################################
MYROOT="./../../../../.."
########################################################################
########################################################################
all:: test00
all:: test01
########################################################################
clean:: ; rm -f *~
cleanall:: ; rm -f *~
cleanall:: ; rm -f OUTS/test??_out.js
cleanall:: ; rm -f OUTS/test??_out?.js
########################################################################
testall:: test00; $(NODE) OUTS/$<_out.js
testall:: test01; $(NODE) OUTS/$<_out.js
########################################################################
########################################################################
XATS2JS_RUNTIME=\
$(MYROOT)/srcgen2/xats2js/srcgenx/xshared/runtime
XATS2JS_JSEMIT01=\
$(MYROOT)/srcgen2/xats2js/srcgenx/UTIL/xats2js_jsemit01_ats2.js
XATS2JS_JSEMIT01=\
$(MYROOT)/srcgen2/xats2js/srcgenx/UTIL/xats2js_jsemit01_ats3.js
########################################################################
########################################################################
test00:: ; \
printf "// %s\n" "`date`" > OUTS/$@_out.js
############
test00:: ; \
$(CAT) $(XATS2JS_RUNTIME)/xats2js_js1emit.js >> OUTS/$@_out.js
test00:: ; \
$(CAT) $(XATS2JS_RUNTIME)/srcgen2_prelude.js >> OUTS/$@_out.js
############
test00:: \
test00_pre2026.dats; \
$(NODE) --stack-size=8192 $(XATS2JS_JSEMIT01) $< >> OUTS/$@_out.js
########################################################################
test01:: ; \
printf "// %s\n" "`date`" > OUTS/$@_out.js
############
test01:: ; \
$(CAT) $(XATS2JS_RUNTIME)/xats2js_js1emit.js >> OUTS/$@_out.js
test01:: ; \
$(CAT) $(XATS2JS_RUNTIME)/srcgen2_precats.js >> OUTS/$@_out.js
test01:: ; \
$(CAT) $(XATS2JS_RUNTIME)/srcgen2_prelude.js >> OUTS/$@_out.js
############
test01:: \
test01_pre2026.dats; \
$(NODE) --stack-size=8192 $(XATS2JS_JSEMIT01) $< >> OUTS/$@_out.js
########################################################################
##################### end of [Makefile_jsemit01] #######################
